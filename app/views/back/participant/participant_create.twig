<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Créer un Participant</title>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-bold mb-4 text-center">Créer un Nouveau Participant</h2>
        <form id="participantForm" action="/participants/create" method="POST" class="space-y-4">
            <!-- Username -->
            <div>
                <label class="block font-semibold">Nom d'utilisateur</label>
                <input type="text" name="username" class="w-full p-2 border rounded-lg" placeholder="Entrez votre nom d'utilisateur" required>
            </div>
            <!-- Email -->
            <div>
                <label class="block font-semibold">Email</label>
                <input type="email" name="email" class="w-full p-2 border rounded-lg" placeholder="Entrez votre email" required>
            </div>
            <!-- Password -->
            <div>
                <label class="block font-semibold">Mot de passe</label>
                <input type="password" name="password" class="w-full p-2 border rounded-lg" placeholder="Entrez votre mot de passe" required>
            </div>
            <!-- Avatar (Optional) -->
            <div>
                <label class="block font-semibold">Avatar (URL)</label>
                <input type="text" name="avatar" class="w-full p-2 border rounded-lg" placeholder="URL de votre avatar">
            </div>
            <!-- Gender -->
            <div>
                <label class="block font-semibold">Genre</label>
                <select name="gender" class="w-full p-2 border rounded-lg">
                    <option value="homme">Homme</option>
                    <option value="femme">Femme</option>
                </select>
            </div>
            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                    Créer le Participant
                </button>
            </div>
        </form>
    </div>
    <script>
        $(document).ready(function() {
            // Soumission du formulaire via AJAX
            $("#participantForm").submit(function(e) {
                e.preventDefault();
                var formData = $(this).serialize();
                $.ajax({
                    url: "/participants/create",
                    type: "POST",
                    data: formData,
                    success: function(response) {
                        const result = JSON.parse(response);
                        if (result.success) {
                            window.location.href = result.redirect_url;
                        } else {
                            console.error(result.error);
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error("Erreur lors de l'envoi du formulaire :", error);
                    }
                });
            });
        });
    </script>
</body>
</html>
