<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tous les Événements</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-6">
        <h1 class="text-4xl font-bold mb-6">Tous les Événements</h1>
        <div id="eventsContainer" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for event in events %}
            <div id="event-{{ event.event_id }}" class="event bg-white shadow-lg rounded-lg p-4">
                <img src="{{ event.image }}" alt="Image de l'événement" class="w-full h-40 object-cover rounded-t-lg">
                <h2 class="text-2xl font-semibold mt-2">{{ event.title }}</h2>
                <p class="text-gray-700">{{ event.description }}</p>
                <p class="text-lg font-medium mt-2">Date de fin : {{ event.endEventAt|date("d/m/Y") }}</p>
                <p><strong>Adresse :</strong> {{ event.adresse or 'N/A' }}</p>
                <p><strong>Capacité :</strong> {{ event.capacite }} personnes</p>
                <p><strong>Prix :</strong> {{ event.price is not null ? event.price : 'Gratuit' }}</p>
                <p><strong>Mode :</strong> {{ event.eventMode }}</p>
                <div class="mt-4">
                    <a href="editEvent.twig?id={{ event.event_id }}" class="inline-block bg-yellow-500 text-white rounded-lg p-2 hover:bg-yellow-600">Éditer</a>
                    <button onclick="confirmDelete({{ event.event_id }})" class="inline-block bg-red-500 text-white rounded-lg p-2 hover:bg-red-600">Supprimer</button>
                    <button onclick="cancelEvent({{ event.event_id }})" class="inline-block bg-blue-500 text-white rounded-lg p-2 hover:bg-blue-600">Annuler</button>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    
    <script>
        function confirmDelete(eventId) {
            if (confirm("Êtes-vous sûr de vouloir supprimer cet événement ?")) {
                $.ajax({
                    url: '/../../../app/controllers/frontOffice/EventController.php',
                    type: 'POST',
                    data: { id: eventId },
                    success: function(response) {
                        const result = JSON.parse(response);
                        if (result.success) {
                            // Supprimer 
                            $('#event-' + eventId).remove();
                            alert("Événement supprimé avec succès.");
                        } else {
                            alert("Erreur lors de la suppression : " + result.error);
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error("Erreur lors de la suppression :", error);
                    }
                });
            }
        }

        function cancelEvent(eventId) {
            // annuler un événement
            $.ajax({
                url: '/../../../app/controllers/frontOffice/EventController.php',
                type: 'POST',
                data: { id: eventId },
                success: function(response) {
                    const result = JSON.parse(response);
                    if (result.success) {
                        alert("Événement annulé avec succès.");
                    } else {
                        alert("Erreur lors de l'annulation : " + result.error);
                    }
                },
                error: function(xhr, status, error) {
                    console.error("Erreur lors de l'annulation :", error);
                }
            });
        }
    </script>
</body>
</html>
