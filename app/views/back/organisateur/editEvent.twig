    <script>
        $(document).ready(function() {
            const urlParams = new URLSearchParams(window.location.search);
            const eventId = urlParams.get('id');

            if (eventId) {
                loadEventData(eventId);
            } else {
                console.error("ID de l'événement manquant dans l'URL.");
            }

            $(".event-mode").change(function() {
                let selectedMode = $("input[name='eventMode']:checked").val();
                $("#adresseField").toggle(selectedMode === "presentiel");
                $("#lienEventField").toggle(selectedMode === "en ligne");
            });

            $(".payment-type").change(function() {
                let selectedPayment = $("input[name='isPaid']:checked").val();
                $("#priceField").toggle(selectedPayment === "payant");
            });

            $("#eventForm").submit(function(e) {
                e.preventDefault();
                var formData = new FormData(this);
                formData.append("action", "update");

                $.ajax({
                    url: '/../../../app/controllers/frontOffice/EventController.php',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        const result = JSON.parse(response);
                        if (result.success) {
                            alert("Événement mis à jour avec succès.");
                            window.location.href = "/Event.twig"; 
                        } else {
                            alert("Erreur lors de la mise à jour : " + result.error);
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error("Erreur lors de la mise à jour :", error);
                    }
                });
            });
        });


        function loadEventData(eventId) {
            $.ajax({
                url: '/../../../app/controllers/frontOffice/EventController.php',
                type: 'POST',
                data: { action: 'fetchEvent', id: eventId },
                success: function(response) {
                    const result = JSON.parse(response);
                    if (result.success) {
                        populateForm(result.data);
                    } else {
                        console.error(result.message);
                    }
                },
                error: function(xhr, status, error) {
                    console.error("Erreur lors du chargement des données :", error);
                }
            });


            // Charger les catégories et sponsors via AJAX
            $.ajax({
                url: "/../../../app/controllers/frontOffice/EventController.php",
                type: "POST",
                data: { action: "fetchFormData" },
                success: function(response) {
                    const result = JSON.parse(response);
                    if (result.categories && result.sponsors) {
                        // Remplir les options des catégories
                        let categoryOptions = '<option value="" disabled selected>Choisir une catégorie</option>';
                        result.categories.forEach(category => {
                            categoryOptions += `<option value="${category.category_id}">${category.name}</option>`;
                        });
                        $("select[name='category_id']").html(categoryOptions);

                        // Remplir les options des sponsors
                        let sponsorOptions = '<option value="" selected>Aucun sponsor</option>';
                        result.sponsors.forEach(sponsor => {
                            sponsorOptions += `<option value="${sponsor.sponsor_id}">${sponsor.name}</option>`;
                        });
                        $("select[name='sponsor_id']").html(sponsorOptions);
                    }
                },
                error: function(xhr, status, error) {
                    console.error("Erreur lors du chargement des données :", error);
                }
            });

            function populateForm(event) {
            $("#event_id'").val(event.event_id);
            $("input[name='title']").val(event.title);
            $("textarea[name='description']").val(event.description);
            $("input[name='eventMode'][value='" + event.eventMode + "']").prop("checked", true);
            $("input[name='capacite']").val(event.capacite);
            $("input[name='startEventAt']").val(event.startEventAt.split(' ')[0]);
            $("input[name='endEventAt']").val(event.endEventAt.split(' ')[0]);
            $("input[name='adresse']").val(event.adresse || '');
            $("input[name='lienEvent']").val(event.lienEvent || '');
            $("input[name='price']").val(event.price || '');
            $("select[name='category_id']").val(event.category_id);
            $("select[name='sponsor_id']").val(event.sponsor_id || '');

            if (event.image) {
                $("#eventImagePreview").attr("src", "/assets/images/" + event.image).removeClass("hidden");
            }

            if (event.eventMode === "presentiel") {
                $("#adresseField").removeClass("hidden");
                $("#lienEventField").addClass("hidden");
            } else {
                $("#adresseField").addClass("hidden");
                $("#lienEventField").removeClass("hidden");
            }

            if (event.price !== null) {
                $("#priceField").removeClass("hidden");
            }
        }


    }

    </script>
