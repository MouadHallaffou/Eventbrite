<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tous les Événements</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-6">
        <h1 class="text-4xl font-bold mb-6">Tous les Événements</h1>
        <div id="eventsContainer" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

             <!--                       -->

        </div>
    </div>

    <script>
        $(document).ready(function() {

            loadEvents();

            //charger les événements via AJAX
            function loadEvents() {
                $.ajax({
                    url: '/../../../app/controllers/frontOffice/EventController.php',
                    type: 'POST',
                    data: { action: 'view' },
                    success: function(response) {
                        const result = JSON.parse(response);
                        if (result.success) {
                            const events = result.data;
                            let eventsHtml = '';
                            events.forEach(event => {
                                eventsHtml += `
                                    <div id="event-${event.event_id}" class="event bg-white shadow-lg rounded-lg p-4">
                                        <img src="/public/assets/images/${event.image}" alt="Image de l'événement" class="w-full h-40 object-cover rounded-t-lg">
                                        <h2 class="text-2xl font-semibold mt-2">${event.title}</h2>
                                        <p class="text-gray-700">${event.description}</p>
                                        <p class="text-lg font-medium mt-2">Date de fin : ${new Date(event.endEventAt).toLocaleDateString()}</p>
                                        <p><strong>Adresse :</strong> ${event.adresse || ' '}</p>
                                        <p><strong>Capacité :</strong> ${event.capacite} personnes</p>
                                        <p><strong>Prix :</strong> ${event.price !== null ? event.price + ' €' : 'Gratuit'}</p>
                                        <p><strong>Mode :</strong> ${event.eventMode}</p>
                                        <div class="mt-4">
                                            <a href="editEvent.twig?id=${event.event_id}" class="editBtn inline-block bg-yellow-500 text-white rounded-lg p-2 hover:bg-yellow-600">Éditer</a>
                                            <button onclick="confirmDelete(${event.event_id})" class="inline-block bg-red-500 text-white rounded-lg p-2 hover:bg-red-600">Supprimer</button>
                                            <button onclick="cancelEvent(${event.event_id})" class="inline-block bg-blue-500 text-white rounded-lg p-2 hover:bg-blue-600">Annuler</button>
                                        </div>
                                    </div>
                                `;
                            });
                            $('#eventsContainer').html(eventsHtml);
                        } else {
                            console.error(result.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error("Erreur lors du chargement des événements :", error);
                    }
                });
            }

            function update() {
                $("body").on("click", ".editBtn", function(e){
                    e.preventDefault();

                    var id = $("event_id").attr('id');

                    $.ajax({
                        url: "/../../app/controllers/frontOffice/EventController.php",
                        type: "POST",
                        data: {id: id},

                        success: function(response){
                            
                        }
                    })
                })
            }

            
        });
    </script>
</body>
</html>