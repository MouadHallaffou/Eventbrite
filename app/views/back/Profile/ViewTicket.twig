<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Ticket</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 font-sans leading-normal tracking-normal">

    <!-- Navigation Bar -->
    <nav class="bg-white shadow-md p-4 flex justify-between items-center">
        <!-- Logo -->
        <div>
            <img src="eventbrite-logo.png" alt="Eventbrite Logo" class="h-8">
        </div>

        <!-- Search Bar -->
        <div class="flex-1 mx-4">
            <input type="text" placeholder="Search events..." class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out">
        </div>

        <!-- Buttons & Profile -->
        <div class="flex items-center space-x-6">
            <!-- Browse Events -->
            <a href="browse-events.twig" class="px-6 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 text-sm font-medium transition duration-200 ease-in-out">
                Browse Events
            </a>

            <!-- Profile Dropdown -->
            <div class="relative">
                <button onclick="toggleDropdown('profileDropdown')" class="px-4 py-2 bg-gray-200 rounded-md hover:bg-gray-300 text-sm font-medium">Profile</button>
                <div id="profileDropdown" class="absolute hidden mt-2 bg-white shadow-md rounded-lg w-48 z-10">
                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">My Tickets</a>
                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Account Settings</a>
                    <a href="#" class="block px-4 py-2 text-sm text-red-500 hover:bg-gray-100">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto px-6 py-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

            <!-- Left Side (Ticket with QR code) -->
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <h2 class="text-2xl font-semibold mb-4">Your Ticket</h2>
                <img class="w-full rounded-lg mb-4" src="https://images.unsplash.com/photo-1524368535928-5b5e00ddc76b" alt="Concert">
                
                <!-- Ticket Information -->
                <div class="mb-4">
                    <p class="text-lg font-bold">Event: John Smith Live in Concert</p>
                    <p class="text-lg">Date: Friday, April 15th at 8:00 PM</p>
                    <p class="text-lg">Venue: The Fillmore Auditorium</p>
                    <p class="text-lg">Seat: VIP Admission - Seat A12</p>
                </div>

                <!-- QR Code -->
                <div class="flex justify-center mb-4">
                    <img src="https://via.placeholder.com/150" alt="QR Code" class="w-24 h-24 rounded-md">
                </div>

                <!-- Download Button -->
                <button class="w-full bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 mb-2 transition duration-150">Download Ticket</button>

                <!-- Cancel Order Button -->
                <button class="w-full bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition duration-150">Cancel Order</button>
            </div>

            <!-- Right Side (Expression of Interest) -->
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <h2 class="text-2xl font-semibold mb-4">Expression of Interest</h2>
                
                <!-- Edit Contact Information -->
                <div class="mb-4">
                    <h3 class="text-lg font-semibold mb-2">Contact Information</h3>
                    <div class="mb-2">
                        <label for="firstName" class="text-sm font-medium">First Name *</label>
                        <input type="text" id="firstName" value="Amal" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out mb-2">
                    </div>
                    <div class="mb-2">
                        <label for="surname" class="text-sm font-medium">Surname *</label>
                        <input type="text" id="surname" value="Issellay" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out mb-2">
                    </div>
                    <div class="mb-2">
                        <label for="email" class="text-sm font-medium">Email *</label>
                        <input type="email" id="email" value="amalissellay01@gmail.com" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out mb-2">
                    </div>
                </div>

                <!-- Delivery Method -->
                <div class="mb-4">
                    <label for="deliveryMethod" class="text-sm font-medium">Delivery Method</label>
                    <select id="deliveryMethod" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out">
                        <option value="eTicket" selected>eTicket</option>
                        <option value="Postal">Postal</option>
                    </select>
                </div>

                <!-- Edit Button -->
                <button class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition duration-150">Edit</button>
            </div>

        </div>

        <!-- More Events You May Like -->
        <div class="mt-8">
            <h2 class="text-2xl font-semibold mb-4">More Events You May Like</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <img class="w-full rounded-lg mb-4" src="https://images.unsplash.com/photo-1530245323190-93d6e2a50575" alt="Event">
                    <h3 class="text-xl font-semibold">Rock Concert</h3>
                    <p class="text-sm text-gray-500">Saturday, May 5th at 7:00 PM</p>
                    <a href="#" class="mt-4 inline-block bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">Learn More</a>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <img class="w-full rounded-lg mb-4" src="https://images.unsplash.com/photo-1524995997949-facda6c3e0cc" alt="Event">
                    <h3 class="text-xl font-semibold">Music Festival</h3>
                    <p class="text-sm text-gray-500">Sunday, June 10th at 5:00 PM</p>
                    <a href="#" class="mt-4 inline-block bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">Learn More</a>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <img class="w-full rounded-lg mb-4" src="https://images.unsplash.com/photo-1503594087464-d191738973cb" alt="Event">
                    <h3 class="text-xl font-semibold">Comedy Show</h3>
                    <p class="text-sm text-gray-500">Friday, July 20th at 8:30 PM</p>
                    <a href="#" class="mt-4 inline-block bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">Learn More</a>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleDropdown(id) {
            const dropdown = document.getElementById(id);
            dropdown.classList.toggle("hidden");
        }
    </script>

</body>

</html>
