                    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Events Management</h2>
                    <div class="overflow-x-auto">
                        <table class="min-w-full bg-white rounded-lg overflow-hidden">
                            <thead class="bg-gray-800 text-gray-800">
                                <tr>
                                    <th class="py-3 px-4 uppercase font-semibold text-sm">ID</th>
                                    <th class="py-3 px-4 uppercase font-semibold text-sm">Title</th>
                                    <th class="py-3 px-4 uppercase font-semibold text-sm">Address</th>
                                    <th class="py-3 px-4 uppercase font-semibold text-sm">Status</th>
                                    <th class="py-3 px-4 uppercase font-semibold text-sm">Mode</th>
                                    <th class="py-3 px-4 uppercase font-semibold text-sm">Price</th>
                                    <th class="py-3 px-4 uppercase font-semibold text-sm">Capacity</th>
                                    <th class="py-3 px-4 uppercase font-semibold text-sm">Start Date</th>
                                    <th class="py-3 px-4 uppercase font-semibold text-sm">End Date</th>
                                </tr>
                            </thead>
                            <tbody class="text-gray-700">
                                {% for event in events %}
                                <tr class="border-b border-gray-200 hover:bg-gray-50 transition duration-200">
                                    <td class="py-4 px-4">{{ event.event_id }}</td>
                                    <td class="py-4 px-4">{{ event.title }}</td>
                                    <td class="py-4 px-4">{{ event.adresse }}</td>
                                    <td class="py-4 px-4">
                                        <select name="status" id="status"
                                            onchange="updateStatus('{{ event.event_id }}', this.value)" class="
                                    {% if event.status == 'accepted' %}
                                        bg-green-200 text-green-800
                                    {% elseif event.status == 'refused' %}
                                        bg-red-200 text-red-800
                                    {% else %}
                                        bg-yellow-200 text-yellow-800
                                    {% endif %}
                                    py-1 px-3 rounded-full text-xs
                                ">
                                            <option value="{{ event.status }}">{{ event.status }}</option>
                                            <option value="accepted">accepted</option>
                                            <option value="refused">refused</option>
                                        </select>
                                    </td>
                                    <td class="py-4 px-4">{{ event.eventMode }}</td>
                                    <td class="py-4 px-4">${{ event.price }}</td>
                                    <td class="py-4 px-4">{{ event.capacite }}</td>
                                    <td class="py-4 px-4">{{ event.startEventAt|date('Y-m-d H:i') }}</td>
                                    <td class="py-4 px-4">{{ event.endEventAt|date('Y-m-d H:i') }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <script>
    function updateStatus(eventId, status) {
        fetch('/dashboard/Event/updateStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    eventId: eventId,
                    status: status
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Event status updated successfully');
                    window.location.reload(); // Reload the page to reflect changes
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Something went wrong!');
            });
    }
    </script>
